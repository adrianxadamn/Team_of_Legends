          <li><a href="http://www.thedailybeast.com/">THE DAILY BEAST</a></li>
      </div>
    </div>

    <div class= "column column-two">
    <div class= "UserList">

<h1>Update Account</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :native_language, "Native Language" %>
    <%= f.text_field :native_language %>
  </div>
  <div class="field">
    <%= f.label :role %>
    <%= f.text_field :role %>
  </div>
  <div class="field">
    <%= f.label :tier_level %>
    <%= f.text_field :tier_level %>
  </div>
  <div class="field">
    <%= f.label :ign, "In-Game Name" %>
    <%= f.text_field :ign %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :born_on, "DOB" %>
    <%= f.date_select :born_on, order: [:month, :day, :year], :start_year => 1970 %>
  </div>

  <div class="actions"><%= f.submit "Update Account" %></div>
<% end %>

    </div>
    </div>

    <div class ="column column-three">
      <div class="recentTeams">
        <h1> Recent Teams Created </h1>
        <div class="RecentTeam">
        </div>
      </div>
      <div class="recentUsers">
        <h1> Recent Users Joined </h1>
      <% @users.each do |user| %>
        <div class="RecentUser">
        <li><b>User:</b> <%= user.name %> <br>
        <b> Tier: </b> <%= user.tier_level %></li>
        </div>
        <% end %>
      </div>
    </div>
</div>






