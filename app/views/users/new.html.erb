users/new.html.erb

<div class ="container">
    <div class= "column column-one">
      <div class= "Header">
        <h1>The User Info Goes Here</h1>
      </div>
      <div class="LoLLinks">
        <h1>News</h1>
          <li><a href="http://news.yahoo.com/">Yahoo! News</a></li>
          <li><a href="http://www.huffingtonpost.com/">Huffington Post</a></li>
          <li><a href="http://www.buzzfeed.com/news">BuzzFeed</a></li>
          <li><a href="http://www.nytimes.com/">The New York Times</a></li>
          <li><a href="http://www.latimes.com/">LA Times</a></li>
          <li><a href="http://www.cnn.com/">CNN Network</a></li>
          <li><a href="http://www.cbsnews.com/">CBS News</a></li>
          <li><a href="http://www.usatoday.com/">USAToday</a></li>
          <li><a href="http://elitedaily.com/">ELITEDAILY</a></li>
          <li><a href="http://time.com/">TIME</a></li>
          <li><a href="http://www.thedailybeast.com/">THE DAILY BEAST</a></li>
      </div>
    </div>

    <div class= "column column-two">
      <div class="UserInfo">
        <h1>Sign Up</h1>
<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <div class="error_messages">
      <h2>Form is invalid</h2>
      <ul>
        <% for message in @user.errors.full_messages %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :email %>
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div class="field">
    <%= f.label :password_confirmation, "Password Confirmation" %>
    <%= f.password_field :password_confirmation %>
  </div>
  <div class="field">
    <%= f.label :native_language, "Native Language" %>
    <%= f.text_field :native_language %>
  </div>
  <div class="field">
    <%= f.label :location %>
    <%= f.text_field :location %>
  </div>

  <div class="field">
    <%= f.label :role %>
    <%= select_tag :role, options_for_select(["Top", "Jungle", "Mid", "ADC", "Support"]) %>
  </div>
  <div class="field">
    <%= f.label :tier_level %>
    <%= f.select :tier_level, options_for_select(["Bronze", "Silver", "Gold", "Platinum", "Diamond", "Master", "Challenger"]) %>
  </div>
  <div class="field">
    <%= f.label :ign, "In-Game Name" %>
    <%= f.text_field :ign %>
  </div>
  <div class="field">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="field">
    <%= f.label :born_on, "DOB" %>
    <%= f.date_select :born_on, order: [:month, :day, :year], :start_year => 1970 %>
  </div>
  <div class="field">
    <%= f.label :profile_image, "Profile Image (Insert Url Link)" %>
    <%= f.text_field :profile_image %>
  </div>

  <div class="actions"><%= f.submit "Create Account" %></div>
<% end %>

      </div>
    </div>

    <div class ="column column-three">
      <div class="recentTeams">
        <h1>Recent Teams Created</h1>

      </div>
      <div class="recentUsers">
        <h1> Recent Active Users </h1>
      <% @users.each do |user| %>
        <div class="RecentUser">
          <div class="PictureLeft">
            <%= image_tag user.profile_image, :size => "70x70" %>
          </div>
          <div class="QuickInfo">
            <li>
              <b>User:</b> <%= user.name %> <br>
              <b> IGN: </b> <%= user.ign %> <br>
              <b> Role: </b> <%= user.role %> <br>
              <b> Tier: </b> <%= user.tier_level %>
            </li>

          </div>
        </div>
        <% end %>
      </div>
    </div>
</div>




