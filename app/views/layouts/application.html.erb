<!DOCTYPE html>
<html>
<head>
  <title>Team Of Legends</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='https://fonts.googleapis.com/css?family=Droid+Sans+Mono|Source+Sans+Pro|Open+Sans' rel='stylesheet' type='text/css'>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
</head>
<body>

<nav>
  <div class="navbar">
    <ul class="navbar1">
      <li><%= link_to 'Home', root_path %></li>
      <% if current_user %>
      <li>
      <%= link_to 'Profile', current_user %>
      </li>
      <% end %>
      <li><%= link_to 'Users', users_path %></li>
      <li><%= link_to 'Teams', teams_path %></li>
      <li>Info</li>
    </ul>
    <ul class="navbar2">
      <li><%= image_tag "team_of_legends.png", height: "50", width: "100" %></li>
    </ul>
    <ul class="navbar3">
      <li>
        <% if current_user %>
          Welcome, <%= current_user.ign %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Logout', session_path('dummy'), method: :delete %>
        <% else %>
          <%= link_to 'Login', login_path %>
          &nbsp;&nbsp;|&nbsp;&nbsp;
          <%= link_to 'Sign Up', new_user_path %>
        <% end %>
      </li>
    </ul>
  </nav>
</nav>


<%= yield %>

</body>
</html>
